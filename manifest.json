{
  "name": "ebates retargeting",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Ebates Hackatron 2017",
  "homepage_url": "http://www.ebates.com",
  "icons": {
    "32": "icons/ebates.png",
    "64": "icons/ebates.png",
    "128": "icons/ebates.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://www.macys.com/",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.macys.com/shop/product/*",
        "https://www.macys.com/bag/atbpage/*"
      ],
      "js": [
        "src/inject/inject.js", "js/jquery/jquery.min.js"
      ]
    }
  ],
  "web_accessible_resources": [
      "js/script.js"
  ]
}
